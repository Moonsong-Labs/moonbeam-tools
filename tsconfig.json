{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "outDir": "build"
  },
  "include": ["src/**/*.ts", "test/**/*.spec.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
